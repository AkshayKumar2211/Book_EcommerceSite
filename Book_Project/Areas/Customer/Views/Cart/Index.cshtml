@model Book_Project.Models.ViewModels.ShoppingCartVM

<form method="post">
    <div class="container my-4">
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-light d-flex justify-content-between align-items-center">
                <div>
                    <i class="fa fa-shopping-cart"></i> &nbsp; Shopping Cart
                </div>
                <a asp-action="Index" asp-controller="Home" class="btn btn-info btn-sm">Continue Shopping</a>
            </div>

            <div class="card-body">
                @foreach (var item in Model.ListCart)
                {
                    <div class="row align-items-center mb-3 border-bottom pb-3">
                        <div class="col-3 col-lg-2 text-center">
                            <img src="@item.Product.ImageUrl" class="img-fluid rounded" alt="@item.Product.Title" />
                        </div>

                        <div class="col-9 col-lg-5">
                            <h5 class="mb-1"><strong>@item.Product.Title</strong></h5>
                            <p class="mb-0 text-muted"><small>@Html.Raw(item.Product.Description)</small></p>
                        </div>

                        <div class="col-12 col-lg-5 mt-3 mt-lg-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0">
                                        <strong>@item.Price <span class="text-muted">x</span> @item.Count = ₹@(item.Price* item.Count)</strong>
                                    </h6>
                                </div>

                                <div class="btn-group" role="group">
                                    <a asp-action="plus" asp-route-Id="@item.Id" class="btn btn-sm btn-primary" title="Increase quantity">
                                        <i class="fas fa-plus"></i>
                                    </a>
                                    <a asp-action="minus" asp-route-Id="@item.Id" class="btn btn-sm btn-danger" title="Decrease quantity">
                                        <i class="fas fa-minus"></i>
                                    </a>
                                    <a asp-action="delete" asp-route-Id="@item.Id" class="btn btn-sm btn-outline-danger" title="Remove item">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <div class="row justify-content-end mt-4">
                    <div class="col-md-6 col-lg-4">
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between bg-light">
                                <span class="text-info">Total (INR)</span>
                                <strong class="text-info">
                                    <i class="fa-solid fa-indian-rupee-sign"></i>&nbsp;
                                    <span id="txtOrderTotal">@Model.OrderHeader.OrderTotal</span>
                                </strong>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="card-footer text-end">
                <div class="row justify-content-end">
                    <div class="col-md-6 col-lg-4">
                        <a asp-action="Summary" class="btn btn-success w-100">Proceed to Summary</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>